import java.util.Locale;
import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
	
		Scanner sc = new Scanner (System.in);
		Locale.setDefault(Locale.US);
		
		int p1, qt1, p2, qt2;
		double v1, v2, total;
		
		p1=sc.nextInt();
		qt1=sc.nextInt();
		v1=sc.nextDouble();
		p2=sc.nextInt();
		qt2=sc.nextInt();
		v2=sc.nextDouble();
		
		total= qt1*v1+qt2*v2;
		
		System.out.printf("VALOR A PAGAR: R$ %.2f%n", total);
		
		sc.close();
		
	}

}
